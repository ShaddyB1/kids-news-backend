  "cost_optimization": {
    "cache_strategy": {
      "enable": true,
      "voice_cache_days": 30,
      "graphics_cache_days": 90,
      "similar_threshold": 0.85
    },
    "api_limits": {
      "max_voice_calls_per_video": 3,
      "max_image_generation_per_video": 5,
      "batch_processing": true
    },
    "targets": {
      "cost_per_video": 0.50,
      "max_cost_per_video": 1.00,
      "monthly_budget": 100.00
    }
  },
  "quality_standards": {
    "minimum_scores": {
      "voice_naturalness": 85,
      "graphics_relevance": 80,
      "educational_value": 90,
      "engagement": 75,
      "safety": 100
    },
    "content_guidelines": {
      "max_sentence_length": 15,
      "vocabulary_level": "grade_2_4",
      "positive_tone": true,
      "avoid_scary_content": true
    },
    "technical_requirements": {
      "min_resolution": "1280x720",
      "max_file_size_mb": 50,
      "supported_formats": ["mp4", "webm"],
      "aspect_ratio": "16:9"
    }
  },
  "production_workflow": {
    "stages": [
      {
        "name": "content_processing",
        "timeout_seconds": 10,
        "retry_on_failure": true
      },
      {
        "name": "voice_synthesis",
        "timeout_seconds": 30,
        "retry_on_failure": true
      },
      {
        "name": "graphics_generation",
        "timeout_seconds": 60,
        "retry_on_failure": false
      },
      {
        "name": "video_assembly",
        "timeout_seconds": 120,
        "retry_on_failure": false
      },
      {
        "name": "quality_check",
        "timeout_seconds": 10,
        "retry_on_failure": false
      }
    ],
    "batch_size": 5,
    "parallel_processing": true
  }
