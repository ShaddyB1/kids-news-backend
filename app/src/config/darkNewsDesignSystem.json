{
  "darkNewsDesignSystem": {
    "name": "Dark Modern News App Design System",
    "version": "3.0",
    "style": "Dark theme with high contrast, sophisticated news layout",
    "targetAudience": "Kids 6-12 with mature visual preferences",
    "principles": [
      "Dark backgrounds with bright accent colors",
      "High contrast text for readability",
      "Card-based content with subtle borders",
      "Sophisticated color palette with pops of color",
      "Clean typography with strong hierarchy",
      "Minimal icons with clear visual meaning",
      "Layered information architecture",
      "Status indicators with color coding"
    ],
    "colors": {
      "backgrounds": {
        "primary": "#1A1A1A",
        "secondary": "#2D2D2D",
        "elevated": "#3A3A3A",
        "card": "#2A2A2A",
        "overlay": "rgba(0, 0, 0, 0.8)",
        "modalOverlay": "rgba(0, 0, 0, 0.9)"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#B0B0B0",
        "tertiary": "#808080",
        "disabled": "#606060",
        "accent": "#4A9EFF",
        "link": "#4A9EFF"
      },
      "accent": {
        "primary": "#4A9EFF",
        "secondary": "#FF6B6B",
        "success": "#4ECDC4",
        "warning": "#FFE66D",
        "error": "#FF6B6B",
        "info": "#4A9EFF"
      },
      "status": {
        "breaking": "#FF4757",
        "trending": "#FF6B6B",
        "live": "#FF3838",
        "hot": "#FF6B6B",
        "new": "#4ECDC4",
        "updated": "#FFE66D"
      },
      "categories": {
        "politics": "#5F27CD",
        "world": "#FF6B6B",
        "business": "#4ECDC4",
        "technology": "#4A9EFF",
        "sports": "#FF9F43",
        "entertainment": "#FF6B6B",
        "health": "#4ECDC4",
        "science": "#A55EEA"
      },
      "interactive": {
        "buttonPrimary": "#4A9EFF",
        "buttonSecondary": "#3A3A3A",
        "buttonDanger": "#FF6B6B",
        "buttonSuccess": "#4ECDC4",
        "hover": "rgba(74, 158, 255, 0.1)",
        "pressed": "rgba(74, 158, 255, 0.2)",
        "focus": "#4A9EFF"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif",
        "secondary": "-apple-system, BlinkMacSystemFont, 'SF Pro Text', sans-serif",
        "mono": "'SF Mono', 'Monaco', monospace"
      },
      "sizes": {
        "xs": 10,
        "sm": 12,
        "base": 14,
        "md": 16,
        "lg": 18,
        "xl": 20,
        "xxl": 24,
        "xxxl": 28,
        "display": 32,
        "hero": 40
      },
      "weights": {
        "light": "300",
        "regular": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700",
        "extrabold": "800",
        "black": "900"
      },
      "lineHeights": {
        "tight": 1.2,
        "snug": 1.3,
        "normal": 1.4,
        "relaxed": 1.5,
        "loose": 1.6
      }
    },
    "spacing": {
      "unit": 4,
      "xs": 4,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 20,
      "xxl": 24,
      "xxxl": 32,
      "xxxxl": 40
    },
    "borderRadius": {
      "none": 0,
      "xs": 2,
      "sm": 4,
      "md": 6,
      "lg": 8,
      "xl": 12,
      "xxl": 16,
      "xxxl": 20,
      "full": 9999,
      "card": 8,
      "button": 6,
      "chip": 12,
      "modal": 12
    },
    "shadows": {
      "none": "none",
      "sm": {
        "shadowColor": "#000000",
        "shadowOffset": { "width": 0, "height": 1 },
        "shadowOpacity": 0.3,
        "shadowRadius": 2,
        "elevation": 2
      },
      "md": {
        "shadowColor": "#000000",
        "shadowOffset": { "width": 0, "height": 2 },
        "shadowOpacity": 0.4,
        "shadowRadius": 4,
        "elevation": 4
      },
      "lg": {
        "shadowColor": "#000000",
        "shadowOffset": { "width": 0, "height": 4 },
        "shadowOpacity": 0.5,
        "shadowRadius": 8,
        "elevation": 8
      },
      "xl": {
        "shadowColor": "#000000",
        "shadowOffset": { "width": 0, "height": 8 },
        "shadowOpacity": 0.6,
        "shadowRadius": 16,
        "elevation": 12
      }
    },
    "components": {
      "navigationBar": {
        "height": 56,
        "backgroundColor": "#1A1A1A",
        "borderBottom": "1px solid #3A3A3A",
        "titleColor": "#FFFFFF",
        "titleSize": "lg",
        "titleWeight": "bold",
        "iconSize": 24,
        "iconColor": "#FFFFFF"
      },
      "tabBar": {
        "height": 60,
        "backgroundColor": "#2D2D2D",
        "borderTop": "1px solid #3A3A3A",
        "iconSize": 24,
        "labelSize": "xs",
        "activeColor": "#4A9EFF",
        "inactiveColor": "#808080",
        "indicatorHeight": 2,
        "indicatorColor": "#4A9EFF"
      },
      "searchBar": {
        "height": 44,
        "backgroundColor": "#3A3A3A",
        "borderRadius": "lg",
        "paddingHorizontal": 16,
        "placeholderColor": "#808080",
        "textColor": "#FFFFFF",
        "iconColor": "#B0B0B0",
        "focusBorderColor": "#4A9EFF",
        "focusBorderWidth": 1
      },
      "categoryTabs": {
        "height": 40,
        "spacing": 8,
        "paddingHorizontal": 16,
        "paddingVertical": 8,
        "borderRadius": "chip",
        "activeBackground": "#4A9EFF",
        "inactiveBackground": "#3A3A3A",
        "activeTextColor": "#FFFFFF",
        "inactiveTextColor": "#B0B0B0",
        "fontSize": "sm",
        "fontWeight": "medium"
      },
      "newsCard": {
        "backgroundColor": "#2A2A2A",
        "borderRadius": "card",
        "padding": 16,
        "marginBottom": 12,
        "borderWidth": 1,
        "borderColor": "#3A3A3A",
        "shadow": "sm",
        "variants": {
          "featured": {
            "height": 280,
            "imageHeight": 160,
            "titleSize": "xl",
            "titleLines": 2,
            "summaryLines": 3,
            "showAuthor": true,
            "showStats": true
          },
          "standard": {
            "height": 120,
            "layout": "horizontal",
            "imageWidth": 100,
            "titleSize": "md",
            "titleLines": 2,
            "summaryLines": 2,
            "showAuthor": false,
            "showStats": true
          },
          "compact": {
            "height": 80,
            "layout": "horizontal",
            "imageWidth": 80,
            "titleSize": "sm",
            "titleLines": 2,
            "summaryLines": 1,
            "showAuthor": false,
            "showStats": false
          }
        }
      },
      "statusBadge": {
        "paddingHorizontal": 8,
        "paddingVertical": 4,
        "borderRadius": "xs",
        "fontSize": "xs",
        "fontWeight": "bold",
        "textTransform": "uppercase",
        "letterSpacing": 0.5,
        "variants": {
          "breaking": {
            "backgroundColor": "#FF4757",
            "textColor": "#FFFFFF",
            "animated": true,
            "pulse": true
          },
          "trending": {
            "backgroundColor": "#FF6B6B",
            "textColor": "#FFFFFF",
            "icon": "ðŸ“ˆ"
          },
          "live": {
            "backgroundColor": "#FF3838",
            "textColor": "#FFFFFF",
            "icon": "ðŸ”´",
            "animated": true
          },
          "hot": {
            "backgroundColor": "#FF6B6B",
            "textColor": "#FFFFFF",
            "icon": "ðŸ”¥"
          }
        }
      },
      "button": {
        "height": 44,
        "paddingHorizontal": 16,
        "borderRadius": "button",
        "fontSize": "md",
        "fontWeight": "semibold",
        "variants": {
          "primary": {
            "backgroundColor": "#4A9EFF",
            "textColor": "#FFFFFF",
            "shadow": "sm"
          },
          "secondary": {
            "backgroundColor": "#3A3A3A",
            "textColor": "#FFFFFF",
            "borderWidth": 1,
            "borderColor": "#606060"
          },
          "ghost": {
            "backgroundColor": "transparent",
            "textColor": "#4A9EFF",
            "borderWidth": 1,
            "borderColor": "#4A9EFF"
          },
          "danger": {
            "backgroundColor": "#FF6B6B",
            "textColor": "#FFFFFF"
          }
        }
      },
      "modal": {
        "backgroundColor": "#2D2D2D",
        "borderRadius": "modal",
        "padding": 24,
        "shadow": "xl",
        "overlayColor": "rgba(0, 0, 0, 0.9)",
        "headerHeight": 56,
        "headerBorderColor": "#3A3A3A"
      },
      "avatar": {
        "sizes": {
          "xs": 24,
          "sm": 32,
          "md": 40,
          "lg": 48,
          "xl": 64
        },
        "borderRadius": "full",
        "borderWidth": 2,
        "borderColor": "#3A3A3A"
      }
    },
    "layouts": {
      "screen": {
        "backgroundColor": "#1A1A1A",
        "paddingHorizontal": 16,
        "paddingTop": 8,
        "safeAreaColor": "#1A1A1A"
      },
      "header": {
        "backgroundColor": "#1A1A1A",
        "paddingHorizontal": 16,
        "paddingVertical": 12,
        "borderBottomWidth": 1,
        "borderBottomColor": "#3A3A3A",
        "titleAlignment": "center",
        "showBackButton": true,
        "showActionButtons": true
      },
      "contentSection": {
        "marginTop": 24,
        "marginBottom": 16,
        "headerSpacing": 16,
        "itemSpacing": 12
      },
      "grid": {
        "columns": 2,
        "gap": 12,
        "aspectRatio": 1.2
      },
      "list": {
        "itemSpacing": 12,
        "sectionSpacing": 24,
        "headerHeight": 32,
        "showSeparators": false
      }
    },
    "interactions": {
      "touchOpacity": 0.7,
      "hapticFeedback": true,
      "animationDuration": 200,
      "springConfig": {
        "damping": 15,
        "stiffness": 150
      },
      "transitions": {
        "fadeIn": {
          "duration": 300,
          "easing": "ease-out"
        },
        "slideUp": {
          "duration": 400,
          "easing": "ease-out"
        },
        "scale": {
          "duration": 200,
          "easing": "ease-in-out"
        }
      }
    },
    "patterns": {
      "newsFlow": {
        "sections": [
          {
            "type": "hero",
            "title": "Breaking News",
            "cardType": "featured",
            "showStatusBadges": true,
            "maxItems": 3,
            "scrollDirection": "horizontal"
          },
          {
            "type": "category",
            "title": "Hot News",
            "cardType": "standard",
            "showCategoryFilter": true,
            "showTimestamp": true,
            "maxItems": 10
          },
          {
            "type": "topics",
            "title": "Topics",
            "layout": "chips",
            "scrollDirection": "horizontal",
            "showCounts": true
          },
          {
            "type": "regional",
            "title": "World",
            "cardType": "compact",
            "groupByRegion": true,
            "showSeeAll": true
          }
        ]
      },
      "navigation": {
        "type": "bottom-tabs",
        "style": "dark",
        "tabs": [
          { "id": "home", "icon": "house", "label": "Home" },
          { "id": "search", "icon": "search", "label": "Search" },
          { "id": "bookmarks", "icon": "bookmark", "label": "Bookmarks" },
          { "id": "account", "icon": "person", "label": "Account" }
        ],
        "showLabels": true,
        "activeIndicator": "top-line"
      },
      "contentHierarchy": {
        "primary": {
          "fontSize": "xl",
          "fontWeight": "bold",
          "color": "#FFFFFF",
          "lineHeight": "tight"
        },
        "secondary": {
          "fontSize": "md",
          "fontWeight": "medium",
          "color": "#B0B0B0",
          "lineHeight": "normal"
        },
        "tertiary": {
          "fontSize": "sm",
          "fontWeight": "regular",
          "color": "#808080",
          "lineHeight": "relaxed"
        },
        "caption": {
          "fontSize": "xs",
          "fontWeight": "medium",
          "color": "#606060",
          "lineHeight": "normal",
          "textTransform": "uppercase",
          "letterSpacing": 0.5
        }
      }
    },
    "accessibility": {
      "minTouchTarget": 44,
      "contrastRatio": 7.0,
      "focusIndicator": {
        "width": 2,
        "color": "#4A9EFF",
        "offset": 2,
        "borderRadius": 4
      },
      "reducedMotion": true,
      "screenReader": true,
      "colorBlindness": "considered"
    },
    "responsiveness": {
      "breakpoints": {
        "sm": 320,
        "md": 768,
        "lg": 1024,
        "xl": 1280
      },
      "scaling": {
        "typography": "fluid",
        "spacing": "proportional",
        "components": "adaptive"
      }
    },
    "darkModeSpecific": {
      "imageOverlays": {
        "lightContent": "rgba(0, 0, 0, 0.3)",
        "darkContent": "rgba(255, 255, 255, 0.1)"
      },
      "textShadows": {
        "onImages": {
          "color": "rgba(0, 0, 0, 0.8)",
          "offset": { "width": 0, "height": 1 },
          "radius": 2
        }
      },
      "glowEffects": {
        "accent": {
          "color": "#4A9EFF",
          "opacity": 0.3,
          "radius": 8
        },
        "status": {
          "color": "#FF4757",
          "opacity": 0.4,
          "radius": 6
        }
      }
    }
  }
}
